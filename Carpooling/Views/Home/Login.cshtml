@model CarpoolingEL.USUARIOS
@{
    ViewBag.Title = "Login";
}

@if (Session["UserID"] != null)
{
    if (Session["UserTipo"].ToString() == "1")
    {
        Response.Redirect("~/Passageiro");
    }
    else if (Session["UserTipo"].ToString() == "2")
    {
        Response.Redirect("~/Motorista");
    }
}
else
{

<style>

    .erro ul {
        padding: 0;
        list-style-type: none;
    }

</style>

<h2>Login</h2>
<hr />
<br />
<br />
<br />
using (Html.BeginForm())
{
    <div class="form-horizontal">

        @if (Session["msgcad"] != null)
        {
            <div class="form-group">
                <div class="alert alert-success alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                    <strong>Sucesso!</strong> @Session["msgcad"].ToString()
                </div>
            </div>
        }

        <div class="form-group">
            <label class="control-label col-sm-2" for="usuario">Usuário:</label>
            <div class="col-md-10 input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite sua senha", @required = "" } })
                @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Senha:</label>
            <div class="col-sm-10 input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite sua senha", @type = "password", @required = "" } })
                @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2"></label>
            <div class="col-sm-10 input-group erro">
                <div class="sla">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div style="padding-left: 0;" class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Entrar</button>
                <button style="margin-left:10px;" type="button" onclick="window.location.href = 'Registrar'" class="btn btn-link">Registrar</button>
            </div>
        </div>
    </div>
}

<br />
<br />
<br />

}

        </dt>

        <dd>
            @Html.DisplayFor(model => model.DESTINOS.endDest)
        </dd>
        <dt>
            <br />
        </dt>

        <dd>
            <br />
        </dd>

        <dt>
            <a class="btn btn-primary" href="../Index">Voltar</a>
        </dt>
        <dd>

        </dd>
    </dl>

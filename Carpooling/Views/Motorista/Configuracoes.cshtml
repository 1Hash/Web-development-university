            Senha:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.senha)
        </dd>

        <dt>
           <br />
        </dt>

        <dd>
           <br />
        </dd>

        <dt>
            <a class="btn btn-success" href="Editar">Editar</a>
        </dt>
        <dd>
            <a class="btn btn-primary" href="Index">Voltar</a>
        </dd>
    </dl>
</div>

}
else if (Session["UserTipo"] != null && Session["UserTipo"].ToString() == "1")
{
    Response.Redirect("~/Passageiro");
}
else
{
    Response.Redirect("~/Home");
}

        <dd>
            @Html.DisplayFor(model => model.compUsu)
        </dd>

        <dt>
            CEP:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cepUsu)
        </dd>

        <dt>
            Bairro
        </dt>

        <dd>
            @Html.DisplayFor(model => model.bairroUsu)
        </dd>

        <dt>
            Cidade:
        </dt>


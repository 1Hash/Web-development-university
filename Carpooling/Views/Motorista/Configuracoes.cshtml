@model CarpoolingEL.USUARIOS

@{
    ViewBag.Title = "Configuracoes";
}

@if (Session["UserTipo"] != null && Session["UserTipo"].ToString() == "2")
{

<h3>Detalhes</h3>

<div>
    <hr />


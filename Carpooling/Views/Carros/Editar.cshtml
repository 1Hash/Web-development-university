@model CarpoolingEL.CARROS

@{
    ViewBag.Title = "Editar";
}

@if (Session["UserTipo"] != null && Session["UserTipo"].ToString() == "2")
{

<style>
    .sumir {
        display: none;
    }
</style>


<h3>Editar carro</h3>

using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idCar)

        <div class="form-group">
            <label class="control-label col-sm-2">Carro:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.modeloCar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.modeloCar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Placa:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.placaCar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.placaCar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Cor:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.corCar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.corCar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Capacidade:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.capacidadeCar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.capacidadeCar, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.EditorFor(model => model.fkUsu, new { htmlAttributes = new { @class = "form-control sumir", @Value = Session["UserID"].ToString() } })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a style="margin-left: 10px;" class="btn btn-primary" href="../Index">Voltar</a>
            </div>
        </div>
    </div>
}

}
else if (Session["UserTipo"] != null && Session["UserTipo"].ToString() == "1")
{
    Response.Redirect("~/Passageiro");
}
else
{
    Response.Redirect("~/Home");
}
